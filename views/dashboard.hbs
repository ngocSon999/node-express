<div class="container mt-4">
    <h1 class="mb-4">Dashboard</h1>

    <div class="row">
        {{#if (hasPermission user 'show user')}}
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Users</h5>
                    <p class="card-text">Manage system users</p>
                    <a href="{{routes 'userManage'}}" class="btn btn-primary">View Users</a>
                </div>
            </div>
        </div>
        {{/if}}

        {{#if (hasPermission user 'show role')}}
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Roles</h5>
                    <p class="card-text">Manage user roles and permissions</p>
                    <a href="{{routes 'roleManage'}}" class="btn btn-primary">View Roles</a>
                </div>
            </div>
        </div>
        {{/if}}
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Quick Actions</h5>
                    <div class="d-flex gap-2">
                        {{#if (hasPermission user 'create user')}}
                        <a href="{{routes 'userCreate'}}" class="btn btn-success">Create User</a>
                        {{/if}}
                        {{#if (hasPermission user 'create role')}}
                        <a href="{{routes 'roleCreate'}}" class="btn btn-success">Create Role</a>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>